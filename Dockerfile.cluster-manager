FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements-cluster.txt requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

# Copy source code
COPY services/ ./services/

# Set environment
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1

# Run cluster manager
CMD ["python", "services/cluster_manager.py", "config.yaml"]